<h1>hello</h1>

<% @posts.each do |post| %>
<div class="box">
	<%= render 'post', :post => post %>
	<%= link_to "Edit", edit_post_path(post), id: "edit_post_#{post.id}", class: "edit_post", remote: true %>
	<%= link_to "Delete", post_path(post), method: "delete", remote: true, class: "delete_post", id: "delete_post_#{post.id}" %>
</div>

<% end %>
